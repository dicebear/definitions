{
  "$schema": "https://www.dicebear.com/schema/definition.json",
  "meta": {
    "license": {
      "name": "CC0 1.0",
      "url": "https://creativecommons.org/publicdomain/zero/1.0/"
    },
    "creator": {
      "name": "DiceBear",
      "url": "https://www.dicebear.com"
    },
    "source": {
      "name": "DiceBear",
      "url": "https://www.dicebear.com"
    },
    "size": {
      "width": 100,
      "height": 100
    }
  },
  "body": {
    "content": "<text x=\"50%\" y=\"50%\" font-family=\"{{options.fontFamily}}, sans-serif\" font-size=\"{{options.fontSize}}\" fill=\"{{colors.text}}\" text-anchor=\"middle\" style=\"transform: translateY(calc({{options.fontSize}}px * .356))\">{{prng.initials}}</text>",
    "dependencies": {
      "colors": ["text"]
    }
  },
  "components": [],
  "colors": [
    {
      "name": "text",
      "values": ["#000000"]
    }
  ],
  "additionalOptions": {
    "fontFamily": {
      "type": "string",
      "enum": [
        "Arial",
        "Verdana",
        "Helvetica",
        "Tahoma",
        "Trebuchet MS",
        "Times New Roman",
        "Georgia",
        "Garamond",
        "Courier New",
        "Brush Script MT",
        "sans-serif",
        "serif"
      ],
      "default": "Arial"
    },
    "fontSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 50
    },
    "fontWeight": {
      "type": "integer",
      "default": 400,
      "enum": [100, 200, 300, 400, 500, 600, 700, 800, 900]
    }
  }
}
